@model CSkins.Models.Skin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddASkin</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link href="~/css/CRUDStyle.css" rel="stylesheet" />
</head>
<body>

    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Skin/Index">Skins</a>
        <a href="/Skin/AddASkin">Add a Skin</a>
        <a href="/Skin/Delete">Delete a Skin</a>
    </nav>

    <div class="box">
        <h4>Skins</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">What is the name of the Skin?</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gun" class="control-label">What gun is the skin for?</label>
                        <input asp-for="Gun" class="form-control" />
                        <span asp-validation-for="Gun" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description:</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="ImageUrl" value="/images/case.jpg" />
                    </div>
                    <div class="form-group" id="createbtn">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="/Skin/Index/"></a>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
