@model IEnumerable<CSkins.Models.Skin>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link href="~/css/CRUDStyle.css" rel="stylesheet" />
</head>
<body>

    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Skin/Index">Skins</a>
        <a href="/Skin/AddASkin">Add a Skin</a>
        <a href="/Skin/Delete">Delete a Skin</a>
    </nav>

    <div class="cofbox">
        <h3>Choose a Skin To Delete</h3>
        <h2>Skins</h2>
        <div id="coffees">
            <form action="/Skin/DeleteById/" method="post">

                <select name="Id">
                    @foreach (var skin in Model)
                    {


                        <option value="@skin.Id">@skin.Name, @skin.Gun</option>

                    }
                </select>
                <input id="button" type="submit" value="Delete a Coffee" class="btn btn-default" />
            </form>

        </div>
    </div>
</body>
</html>
