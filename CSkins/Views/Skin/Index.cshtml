@model IEnumerable<CSkins.Models.Skin>
@{
    ViewData["Title"] = "Skins";
}

<!DOCTYPE html>
<h2>Products</h2>
<html>
<head>
    <meta charset="utf-8" />
    <script src="https://kit.fontawesome.com/887cb88cb6.js" crossorigin="anonymous"></script>
    <title>Skins</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body>
    <h1>
        <i class="fas fa-mug-hot fa-5x"></i>
    </h1>
    <div id="coffees">
        @foreach (var skin in Model)
        {
            <article>
                <p><a href="/Skin/Details/@skin.Id"><span><img src="@skin.ImageUrl" /></span></a></p>
            </article>
        }
    </div>

    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Skin/Index">Skins</a>
        <a href="/Skin/AddASkin">Add a Skin</a>
        <a href="/Skin/Delete">Delete a Skin</a>
    </nav>

    <footer>
        &copy; 2020 CSkins
    </footer>

</body>
</html>